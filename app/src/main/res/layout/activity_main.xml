<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Ejercicio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="201dp"
        android:text="Ejercicio1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Ejercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Ejercicio2"
        app:layout_constraintStart_toStartOf="@+id/Ejercicio1"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio1" />

    <Button
        android:id="@+id/Ejercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Ejercicio3"
        app:layout_constraintStart_toStartOf="@+id/Ejercicio2"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio2" />

    <Button
        android:id="@+id/Ejercicio4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Ejercicio4"
        app:layout_constraintStart_toStartOf="@+id/Ejercicio3"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio3" />

    <Button
        android:id="@+id/Ejercicio5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Ejercicio5"
        app:layout_constraintStart_toStartOf="@+id/Ejercicio4"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio4" />

    <Button
        android:id="@+id/EJERCICIO6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="EJERCICIO6"
        app:layout_constraintStart_toStartOf="@+id/Ejercicio5"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio5" />

    <Button
        android:id="@+id/Ejercicio8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="31dp"
        android:text="Ejercicio8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EJERCICIO6" />
</androidx.constraintlayout.widget.ConstraintLayout>